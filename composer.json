{
  "name": "kosmosafive/messenger-kafka",
  "type": "symfony-bundle",
  "minimum-stability": "stable",
  "description": "Symfony Messenger Kafka Transport",
  "keywords": [
    "kafka",
    "symfony",
    "messenger",
    "transport",
    "queue",
    "bundle"
  ],
  "authors": [
    {
      "name": "Siarhei Buinevich",
      "email": "a5-kosmos@yandex.ru",
      "homepage": "https://t.me/kosmosafive",
      "role": "Author"
    }
  ],
  "license": "Apache-2.0",
  "require": {
    "php": "^8.4",
    "ext-json": "*",
    "ext-rdkafka": "*",
    "symfony/config": "^7||^8",
    "symfony/dependency-injection": "^7||^8",
    "symfony/http-kernel": "^7||^8",
    "symfony/messenger": "^7||^8",
    "psr/http-client": "^1",
    "psr/http-factory": "^1",
    "psr/http-message": "^2",
    "psr/log": "^3"
  },
  "autoload": {
    "psr-4": {
      "Kosmosafive\\Kafka\\": "src/"
    }
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "phpstan/phpstan": "^2.1",
    "rector/rector": "^2.2",
    "lendable/composer-license-checker": "^1.2",
    "shipmonk/composer-dependency-analyser": "^1.8",
    "friendsofphp/php-cs-fixer": "^3.89",
    "monolog/monolog": "^3.9"
  },
  "scripts": {
    "analyse": "vendor/bin/phpstan analyse -c phpstan.neon --ansi",
    "rector:dry-run": "vendor/bin/rector process --config rector.php --dry-run --clear-cache --ansi",
    "rector:process": "vendor/bin/rector process --config rector.php --clear-cache --ansi",
    "license:check": "vendor/bin/composer-license-checker --allow-file .allowed-licenses.php --ansi",
    "dependency:check": "vendor/bin/composer-dependency-analyser --config composer-dependency-analyser.php"
  }
}
